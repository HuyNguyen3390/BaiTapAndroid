<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DongVat">

    <ImageView
        android:id="@+id/imvAnh"
        android:layout_width="59dp"
        android:layout_height="72dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/tvTen"
        android:layout_width="180dp"
        android:layout_height="39dp"
        android:layout_marginStart="22dp"
        android:layout_marginTop="19dp"
        android:text="Ten Dong Vat"
        android:textSize="24sp"
        app:layout_constraintStart_toEndOf="@+id/imvAnh"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvDacTinh"
        android:layout_width="289dp"
        android:layout_height="59dp"
        android:layout_marginStart="22dp"
        android:layout_marginTop="16dp"
        android:text="Thuoc tinh"
        app:layout_constraintStart_toEndOf="@+id/imvAnh"
        app:layout_constraintTop_toBottomOf="@+id/tvTen" />
</androidx.constraintlayout.widget.ConstraintLayout>